{
  "name": "WP Control",
  "description": "Helps you navigate between all your WordPress websites.",
  "homepage_url": "https://github.com/123code-il/wp-control",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "WP Control is Awesome!",
    "default_popup": "src/views/popup.html",
    "default_icon": {
      "16": "src/images/wordpress.logo.png",
      "32": "src/images/wordpress.logo.png",
      "48": "src/images/wordpress.logo.png",
      "128": "src/images/wordpress.logo.png"
    }
  },
  "options_page": "src/views/options.html",
  "content_scripts": [
  ],
  "background": {
    "service_worker": "src/javascripts/background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "src/images/wordpress.logo.png",
    "32": "src/images/wordpress.logo.png",
    "48": "src/images/wordpress.logo.png",
    "128": "src/images/wordpress.logo.png"
  }
}
