{
  "name": "wp-control",
  "version": "0.2.0",
  "description": "Helps you navigate between all your WordPress websites.",
  "repository": "https://github.com/123code-il/wp-control",
  "author": "Idan Goldman <idan@123code.co>",
  "license": "MIT",
  "scripts": {
    "clean:install": "rm -frv build node_modules pnpm-lock.yaml",
    "clean:cache": "rm -frv .parcel-cache build",
    "clean": "pnpm run clean:install && pnpm run clean:cache",
    "build:tpl": "cp -frv src/views/templates build",
    "build:mkdir": "mkdir -vp build/templates",
    "dev": "pnpm run clean:cache && parcel watch --host localhost --config .parcelrc"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.12.1"
  },
  "type": "module",
  "imports": {
    "~/*": "./*"
  },
  "targets": {
    "default": {
      "distDir": "build",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      },
      "includeNodeModules": true,
      "publicUrl": "/",
      "scopeHoist": false,
      "source": "src/manifest.json"
    },
    "templates": {
      "distDir": "build/templates",
      "publicUrl": "/templates",
      "sourceMap": false,
      "source": [
        "src/views/templates/sites.html",
        "src/views/templates/sites_list_item.html"
      ]
    }
  },
  "parcelIgnore": [
    "{{.*}}"
  ],
  "devDependencies": {
    "@fontsource/roboto-mono": "^5.0.16",
    "@fontsource/roboto": "^5.0.8",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "8.0.0-beta.2",
    "@parcel/compressor-gzip": "^2.10.3",
    "@parcel/config-webextension": "^2.10.3",
    "@parcel/transformer-inline-string": "^2.10.3",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "cssnano": "^6.0.2",
    "jquery": "^3.7.1",
    "lodash": "^4.17.21",
    "parcel-resolver-ignore": "^2.2.0",
    "parcel": "^2.10.3",
    "postcss-apply": "^0.12.0",
    "postcss-atroot": "^0.2.4",
    "postcss-extend-rule": "^4.0.0",
    "postcss-import-url": "^7.2.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-url": "^10.1.3",
    "postcss": "^8.4.32",
    "posthtml-doctype": "^1.1.1",
    "posthtml-include": "^1.7.4",
    "posthtml": "^0.16.6",
    "radash": "^11.0.0",
    "tailwindcss": "^3.4.0"
  }
}
