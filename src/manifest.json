{
  "name": "WP Control",
  "description": "Helps you navigate between all your WordPress websites.",
  "homepage_url": "https://github.com/123code-il/wp-control",

  "version": "0.2.0",
  "default_locale": "en",
  "manifest_version": 3,

  "action": {
    "default_title": "WP Control is Awesome!",
    "default_popup": "views/popup.html"
  },

  "icons": {
    "16": "images/wordpress.logo.png",
    "32": "images/wordpress.logo.png",
    "48": "images/wordpress.logo.png",
    "128": "images/wordpress.logo.png"
  },

  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
